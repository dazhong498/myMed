  <servlet>
    <servlet-name>products</servlet-name>
    <jsp-file>/WEB-INF/views/products.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>products</servlet-name>
    <url-pattern>/products</url-pattern>
